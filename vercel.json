{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "api/[...all].ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/[...all].ts": {
      "includeFiles": "dist/server/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...all].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
